---
import type { Tag } from '@/types/db';
import { slugify } from '@/lib/utils';

interface Props {
  tags: Tag[];
  limit?: number;
}

const { tags, limit } = Astro.props;
const displayTags = limit ? tags.slice(0, limit) : tags;

const getParentTags = (tag: Tag, allTags: Tag[]): Tag[] => {
  if (!tag.parent || tag.parent.length === 0) return [];
  return allTags.filter(t => tag.parent.includes(t.id));
};
---

<nav class="tag-list">
  <h2 class="tag-list__title">Categories</h2>
  <ul class="tag-list__items">
    {displayTags.map((tag) => {
      const parents = getParentTags(tag, tags);
      return (
        <li class="tag-list__item">
          <a href={`/tag/${slugify(tag.tag)}`} class="tag-list__link">
            {parents.length > 0 && (
              <span class="tag-list__parents">
                {parents.map(p => (
                  <span class="tag-list__parent">{p.tag}</span>
                ))}
                <span class="tag-list__separator">â€º</span>
              </span>
            )}
            <span class="tag-list__name">{tag.tag}</span>
          </a>
        </li>
      );
    })}
  </ul>
</nav>

<style>
  .tag-list {
    margin-bottom: 2rem;
  }

  .tag-list__title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .tag-list__items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tag-list__item {
    margin: 0;
  }

  .tag-list__link {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--color-surface);
    border-radius: 20px;
    font-size: 0.875rem;
    text-decoration: none;
    color: var(--color-text);
    transition: background 0.2s;
  }

  .tag-list__link:hover {
    background: var(--color-accent);
    color: white;
  }

  .tag-list__parents {
    font-size: 0.75em;
    opacity: 0.7;
    margin-right: 0.25em;
  }

  .tag-list__parent {
    color: var(--color-text-secondary);
  }

  .tag-list__separator {
    margin: 0 0.25em;
  }

  .tag-list__name {
    font-weight: 500;
  }
</style>
