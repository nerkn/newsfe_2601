---
interface Props {
  content: string;
  title?: string;
}

const { content, title } = Astro.props;

// Simple HTML sanitization - remove script tags
const sanitizeHTML = (html: string) => {
  return html
    .replace(/<script\b[^<]*(?:(?!<\/script>)<[^<]*)*<\/script>/gi, '')
    .replace(/on\w+="[^"]*"/gi, '');
};

// Process article content to convert [number] references to links
// Handles [3333] and [3333,3334] formats
const processArticleReferences = (content: string): string => {
  // Replace patterns like [3333] or [3333,3334,3335] with links
  return content.replace(/\[(\d+(?:,\d+)*)\]/g, (match, idsStr) => {
    const ids = idsStr.split(',').map(id => id.trim());
    const links = ids.map(id => {
      return `<a href="/news/${id}" class="article-ref">[${id}]</a>`;
    });
    return links.join(' ');
  });
};

const safeContent = processArticleReferences(sanitizeHTML(content));
---

<article class="article-content" aria-labelledby={title ? 'article-title' : undefined}>
  {title && <h1 id="article-title" class="article-content__title">{title}</h1>}

  <div class="article-content__body" set:html={safeContent} />
</article>

<style>
  .article-content {
    max-width: 42rem;
    margin: 0 auto;
  }

  .article-content__title {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .article-content__body {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text);
  }

  .article-content__body :global(p) {
    margin-bottom: 1rem;
  }

  .article-content__body :global(h2) {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .article-content__body :global(h3) {
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .article-content__body :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1rem 0;
  }

  .article-content__body :global(.article-ref) {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    padding: 0 0.125rem;
    border-radius: 3px;
    transition: background-color 0.2s;
  }

  .article-content__body :global(.article-ref:hover) {
    background-color: var(--color-surface);
    text-decoration: underline;
  }
</style>
