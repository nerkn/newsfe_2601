---
import Base from '@/layouts/Base.astro';
import { fetchTags, fetchNewsByTag, fetchSources } from '@/lib/api';
import NewsGrid from '@/components/NewsGrid.astro';
import { slugify } from '@/lib/utils';
import type { Tag, Source } from '@/types/db';

export async function getStaticPaths() {
  const tags = await fetchTags();

  return tags.map((tag) => ({
    params: { slug: slugify(tag.tag) },
    props: { tag },
  }));
}

const { tag } = Astro.props;
const { fetchTags: getTags, fetchNewsByTag: getNewsByTag, fetchSources: getSources } = await import('@/lib/api');

// Get news and sources for this tag
const [news, sources] = await Promise.all([
  getNewsByTag(tag.id, 20),
  getSources(),
]);

// Create sources map
const sourcesMap = new Map(sources.map((s) => [s.id, s]));
---

<Base title={`${tag.tag} - News Site`} description={tag.desc || `Latest news about ${tag.tag}`} headerVariant="minimal">
  <div class="page-content">
    <section class="tag-header">
      <h1>{tag.tag}</h1>
      {tag.desc && <p class="tag-description">{tag.desc}</p>}
    </section>

    <section class="tag-news">
      <h2>Latest News</h2>
      <NewsGrid items={news} sources={sourcesMap} columns={3} />

      {news.length === 0 && <p class="no-news">No news found for this tag.</p>}
    </section>
  </div>

  <script slot="main" type="module" src="../scripts/main.js"></script>
</Base>

<style>
  .page-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .tag-header {
    margin-bottom: 2rem;
  }

  .tag-header h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }

  .tag-description {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.6;
  }

  .tag-news h2 {
    margin-bottom: 1.5rem;
  }

  .no-news {
    text-align: center;
    color: var(--color-text-secondary);
    padding: 3rem;
  }
</style>
