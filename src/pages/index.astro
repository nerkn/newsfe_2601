---
import { fetchMeta, fetchTags, fetchRecentNews, fetchSources, fetchNewsArticles, fetchNewsRawByIds } from '@/lib/api';
import NewsGrid from '@/components/NewsGrid.astro';
import ArticleCluster from '@/components/ArticleCluster.astro';
import TagList from '@/components/TagList.astro';
import ThemeSwitcher from '@/components/ThemeSwitcher.astro';
import Footer from '@/components/Footer.astro';
import type { Source } from '@/types/db';

// Fetch data at build time
const [meta, tags, recentNews, sources] = await Promise.all([
  fetchMeta(),
  fetchTags(),
  fetchRecentNews(20),
  fetchSources(),
]);

// Fetch news articles (with latest ID for batching)
let newsArticles = await fetchNewsArticles(meta.tables.news_articles.latest_id, 10);

// Sort articles by ID descending (newest first)
newsArticles = newsArticles.sort((a, b) => b.id - a.id);

// Create sources map for quick lookup
const sourcesMap = new Map(sources.map((s) => [s.id, s]));

// Get all raw article IDs from the articles
const allRawIds: number[] = [];
for (const article of newsArticles) {
  allRawIds.push(...article.articles.slice(0, 3)); // Take 3 per cluster
}

// Fetch the raw items
const rawItems = await fetchNewsRawByIds(allRawIds.slice(0, 30));
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>News Site - Latest News</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <header>
      <nav>
        <h1>News Site</h1>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/tags">Tags</a></li>
        </ul>
        <ThemeSwitcher />
      </nav>
    </header>

    <main>
      <section class="hero">
        <h1>Latest News</h1>
        <p>Stay updated with the latest news and articles</p>
      </section>

      <TagList tags={tags} limit={20} />

      <section class="top-stories">
        <h2>Top Stories</h2>
        <div class="article-clusters">
          {newsArticles.map((article) => (
            <ArticleCluster
              article={article}
              rawItems={rawItems}
              sources={sourcesMap}
              maxItems={3}
            />
          ))}
        </div>
      </section>

      <section class="latest-news">
        <h2>Latest Articles</h2>
        <NewsGrid items={recentNews} sources={sourcesMap} columns={3} />
      </section>
    </main>

    <Footer tags={tags} />

    <!-- Client-side JavaScript for archive articles -->
    <script type="module" src="./scripts/main.js"></script>
  </body>
</html>

