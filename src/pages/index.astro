---
import { fetchMeta, fetchTags, fetchRecentNews, fetchSources } from '@/lib/api';
import NewsGrid from '@/components/NewsGrid.astro';
import TagList from '@/components/TagList.astro';
import ThemeSwitcher from '@/components/ThemeSwitcher.astro';
import type { Source } from '@/types/db';

// Fetch data at build time
const [meta, tags, recentNews, sources] = await Promise.all([
  fetchMeta(),
  fetchTags(),
  fetchRecentNews(20),
  fetchSources(),
]);

// Create sources map for quick lookup
const sourcesMap = new Map(sources.map((s) => [s.id, s]));
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>News Site - Latest News</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <header>
      <nav>
        <h1>News Site</h1>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/tags">Tags</a></li>
        </ul>
        <ThemeSwitcher />
      </nav>
    </header>

    <main>
      <section class="hero">
        <h1>Latest News</h1>
        <p>Stay updated with the latest news and articles</p>
      </section>

      <TagList tags={tags} limit={20} />

      <section class="latest-news">
        <h2>Latest Articles</h2>
        <NewsGrid items={recentNews} sources={sourcesMap} columns={3} />
      </section>
    </main>

    <footer>
      <p>&copy; {new Date().getFullYear()} News Site</p>
    </footer>

    <!-- Client-side JavaScript for archive articles -->
    <script type="module" src="./scripts/main.js"></script>
  </body>
</html>

<style>
  /* Global styles */
  body {
    margin: 0;
    font-family: system-ui, -apple-system, sans-serif;
    color: var(--color-text);
    background: var(--color-background);
  }

  header {
    padding: 1rem 2rem;
    border-bottom: 1px solid var(--color-surface);
  }

  header nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  header nav ul {
    display: flex;
    gap: 1rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  header nav a {
    text-decoration: none;
    color: var(--color-text);
  }

  header nav ul {
    display: flex;
    gap: 1rem;
    list-style: none;
    padding: 0;
    margin: 0;
    align-items: center;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }

  .latest-news h2 {
    margin-bottom: 1.5rem;
  }

  footer {
    padding: 2rem;
    text-align: center;
    border-top: 1px solid var(--color-surface);
    margin-top: 4rem;
  }
</style>
