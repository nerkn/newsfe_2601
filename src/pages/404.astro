---
import Base from "@/layouts/Base.astro";
---

<Base title="Page Not Found" includeFooter={false}>
  <section id="not-found-content" class="section-sm text-center">
    <div class="container">
      <div class="row justify-center">
        <div class="sm:col-10 md:col-8 lg:col-6">
          <span
            class="text-[8rem] block font-bold text-text-dark dark:text-darkmode-text-dark"
          >
            404
          </span>
          <h1 class="h2 mb-4">Page not found</h1>
          <div class="content">
            <p>
              The page you are looking for might have been removed, had its name
              changed, or is temporarily unavailable.
            </p>
          </div>
          <a href="/" class="btn btn-primary mt-8">Back to home</a>
        </div>
      </div>
    </div>
  </section>
</Base>

<script is:inline>
  // Check if this is a news/ or articles/ URL that needs client-side rendering
  const path = window.location.pathname;
  const newsMatch = path.match(/^\/news\/(\d+)$/);
  const articlesMatch = path.match(/^\/articles\/(\d+)$/);

  if (newsMatch || articlesMatch) {
    const notFoundContent = document.getElementById('not-found-content');
    if (notFoundContent) {
      notFoundContent.style.display = 'none';
    }

    // Load main.js to initialize router, which will handle the current URL
    const script = document.createElement('script');
    script.type = 'module';
    script.src = '/scripts/main.js';
    document.head.appendChild(script);
  }
</script>
